.view-box {
  display: flex;
  height: 100vh;
  flex-direction: column;
}

.view-box .test-box {
  width: 350px;
  padding-top: 20px;
}

.view-box .col-sm-3 {
  line-height: 34px;
  padding-right: 0;
  color: #6F737A;
}

.view-box .col-sm-9 {
  padding-left: 0px;
}

.view-box .col-sm-9 .select {
  padding-left: 6px;
}

.view-box .view-head,
.view-box .view-test {
  padding-left: 10px;
}

.view-box .view-head {
  display: flex;
}

.view-box .view-test-ul {
  margin-bottom: 0;
}

.view-box .view-test-li {
  display: inline-flex;
  color: #f784b8;
  font-size: 16px;
  margin-left: 14px;
  line-height: 40px;
  cursor: default;
}

.view-box .view-body {
  padding: 10px 20px;
}

.view-box .view-body table {
  border: none;
}

.view-box .view-body table thead {
  background-image: linear-gradient(to bottom, #f8f8f8 0, #ececec 100%);
}

.view-box .view-body table tbody tr > td:last-child {
  color: #5492FF;
  cursor: pointer;
}
