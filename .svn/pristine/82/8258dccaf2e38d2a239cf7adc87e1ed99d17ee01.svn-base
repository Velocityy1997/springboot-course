* {
  padding: 0;
  margin: 0;
  box-sizing: 100% 100%;
}

.main {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
}

.main .user-view-box {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.main .user-view-box .user-head {
  flex: 0 0 50px;
}

.main .user-view-box .user-head .user-head-ul {
  display: flex;
  width: 35%;
  height: 100%;
  padding-top: 40px;
  float: right;
}

.main .user-view-box .user-head .user-head-ul .user-head-li {
  flex: 1;
  padding: 0 10px;
  text-align: center;
}

.main .user-view-box .user-head .user-head-ul .user-head-li label {
  padding-right: 0;
  padding-left: 0;
  line-height: 34px;
}

.main .user-view-box .user-head .user-head-ul .user-head-li .col-sm-9 {
  padding-left: 5px;
  padding-right: 10px;
}

.main .user-view-box .user-head .user-head-ul .user-head-li .col-sm-9 .select {
  padding: 6px;
}

.main .user-view-box .user-head .user-head-ul .user-head-li:last-child {
  flex: .3;
}

.main .user-view-box .user-body {
  flex: auto;
  padding: 10px;
}

.main .user-view-box .user-body .thead-light {
  background-image: linear-gradient(to bottom, #f8f8f8 0, #ececec 100%);
}

.main .user-view-box .user-body table tr {
  cursor: default;
}

.main .user-view-box .user-body .img-rounded {
  width: 50px;
  height: 50px;
}

.main .user-view-box .user-body .active td {
  background-color: #eee;
}
