
.main-container{
  display: flex;
  height: 100vh;
  flex-direction: column; 
  background-color: #f2f2f2;

 // 收缩按钮
 .slider-box{
  width: 35px;
  height: 35px;
  background: #fff url(../img/test/slider.png) 0 0 no-repeat;
  background-size: 26px 26px;
  background-position: center;
  position: absolute;
  top: 30px;
  right: 40px;
  cursor: pointer;
  transition: transform .5s ease;
  z-index: 999;
  border-radius: 5px;
}
.slider-box.active{
  transform: rotate(180deg);
  top: 15px;
}

  // 信息栏
  .infomation-box{
    flex: 0 0 190px;
    display: flex;
    align-items: center;
    padding-left: 66px;
    margin-bottom: 5px;
    background: #fff;
    position: relative;
    overflow: hidden;
    transition: flex .5s ease;
    .admin-img{
      width: 140px;
      height: 160px;
    }

    // 用户信息列表
    .admin-ul{
      display: flex;
      flex-flow: row wrap;
      font-size: 19px;
      color: #04331a;
      padding-left: 60px;

      .admin-li{
        flex: 0 0 33.3%;
        line-height: 45px;
      }
      .admin-li:nth-child(1), .admin-li:nth-child(4), .admin-li:nth-child(7) {
        flex: 0 0 23%;
      }
      .admin-li:nth-child(2), .admin-li:nth-child(5), .admin-li:nth-child(8) {
        flex: 0 0 42%;
      }
    }

  }
  .infomation-box.active{
    flex: 0 0 0;
  }
  

  // 训练主体内容
  .body{
    flex: auto;
    display: flex;
    flex-direction: column;
    display: none;

    .tab-control{
      flex: 0 0 120px;
      display: flex;
      background: #fff;
      margin-bottom: 5px;
      position: relative;

      .tab-item{
        flex: 1;
        text-align: center;
        font-size: 24px;
        line-height: 120px;
        color: #04331a;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        position: relative;

        .is-test{
          font-size: 16px;
          position: absolute;
          top: 24%;
          right: 28%;
          background-color: #f959a3;
          border-radius: 50%;
          width: 15px;
          height: 15px;
          text-align: center;
          line-height: 20px;
          color: #fff;
          display: none;
        }

        .tab-item-img{
          width: 71px;
          height: 81px;
          display: inline-flex;
          transform: scale(.9);
        }
        .tab-item-text{
          display: inline-flex;
          padding-left: 30px;
          font-weight: 300;
          letter-spacing: 2px;
        }
      }
      .tab-item:nth-child(1) .tab-item-img{
        background:url(../img/test/exam.png) 0 0 no-repeat;
        background-size: 100% 100%;
      }
      .tab-item:nth-child(2) .tab-item-img{
        background:url(../img/test/test.png) 0 0 no-repeat;
        background-size: 100% 100%;
      }
      .tab-item:nth-child(3) .tab-item-img{
        background:url(../img/test/myTest.png) 0 0 no-repeat;
        background-size: 100% 100%;
      }
      .tab-item:hover, .tab-item.active{
        background-image: linear-gradient(to right, #026938 , #b6e2ae);
        .tab-item-text{
          color: #fff;
        }
      }
      .tab-item:nth-child(1):hover .tab-item-img, .tab-item:nth-child(1).active .tab-item-img{
        background:url(../img/test/exam-active.png) 0 0 no-repeat;
        background-size: 100% 100%;
      }
      .tab-item:nth-child(2):hover .tab-item-img, .tab-item:nth-child(2).active .tab-item-img{
        background:url(../img/test/test-active.png) 0 0 no-repeat;
        background-size: 100% 100%;
      }
      .tab-item:nth-child(3):hover .tab-item-img, .tab-item:nth-child(3).active .tab-item-img{
        background:url(../img/test/myTest-active.png) 0 0 no-repeat;
        background-size: 100% 100%;
      }
    }

    .body-contain{
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    // iframe
    .body-iframe{
      border: none;
      width: 100%;
      height: 100%;
      display: none;
    }
    .machine-iframe{
      border: none;
      width: 100%;
      height: 100%;
      display: none!important;
    }
    .machine-iframe.active {
      display: block !important;
    }
    .body-iframe.active{
      display: block;
    }
  }
  .body.active {
    display: flex;
  }
}
