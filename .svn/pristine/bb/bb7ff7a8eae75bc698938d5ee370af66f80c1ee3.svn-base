* {
  padding: 0;
  margin: 0;
}

.train-contain {
  display: flex;
  height: 100vh;
  box-sizing: border-box;
}

.train-contain .train-ul {
  display: flex;
  flex: 1;
  flex-wrap: wrap;
}

.train-contain .train-ul .train-li {
  flex: 0 0 14.6%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  cursor: pointer;
  margin: auto 1%;
  border-radius: 6px;
  position: relative;
  background: #fff;
  height: 393px;
}

.train-contain .train-ul .train-li .train-img {
  width: 142px;
  height: 142px;
  transition: all .05s ease;
}

.train-contain .train-ul .train-li .train-text {
  font-size: 18px;
  color: #04331a;
  margin-top: 20px;
}

.train-contain .train-ul .train-li:hover, .train-contain .train-ul .train-li.active {
  background-image: linear-gradient(to right, #046a39, #b3e1ad);
}

.train-contain .train-ul .train-li:hover .train-text, .train-contain .train-ul .train-li.active .train-text {
  color: #fff;
}
