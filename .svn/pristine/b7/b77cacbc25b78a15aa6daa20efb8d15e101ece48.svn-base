::-webkit-scrollbar {
  /*滚动条整体样式*/
  width: 10px;
  /*高宽分别对应横竖滚动条的尺寸*/
  height: 1px;
}

::-webkit-scrollbar-thumb {
  /*滚动条里面小方块*/
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
  background: #535353;
}

::-webkit-scrollbar-track {
  /*滚动条里面轨道*/
  -webkit-box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
  border-radius: 10px;
  background: #EDEDED;
}

.contain {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: url(../img/rank/bg.png) 0 0 no-repeat;
  background-size: 100% 100%;

  // 导航栏
  .head {
    height: 140px;
    padding: 15px 42px;

    // 标题
    .title-box {
      margin: 0 auto;
      width: 898px;
      height: 113px;
      background: url(../img//rank/head-top.png) 0 0 no-repeat;
      background-size: 100% 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;

      .logo {
        width: 85px;
        height: 85px;
        background: url(../img/rank/logo.png) 0 0 no-repeat;
        background-size: 100% 100%;
      }

      .title-text {
        font-size: 52px;
        font-weight: 550;
        background-image: -webkit-linear-gradient(top, #fff, #f6fdfa, #4b886d);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        padding-left: 10px;
        user-select: none;
        cursor: default;
      }

      // 进度条
      .progress-box {
        position: absolute;
        right: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 24px;
        margin-right: 40px;

        .progress-text {
          width: 100px;
        }

        .progress-main {
          width: 250px;
          height: 20px;
          background-color: #fff;
          border-radius: 500px;
          margin: 0 15px;

          .progress {
            border-radius: 500px;
            width: 0%;
            height: 100%;
            background-color: #52f6db;
          }
        }
      }


      // 下拉菜单
      .select-box {
        position: absolute;
        left: 100%;
        margin-left: 40px;
        width: 300px;

        .layui-form-item {
          margin-bottom: 0;
        }

        .layui-input-block {
          margin-left: 0;
        }

        .layui-form-select dl dd.layui-this {
          background-color: #617374;
        }
      }
    }
  }

  // 主体内容
  .main {
    display: flex;
    height: calc(100% - 140px);
    justify-content: flex-end;

    .main-right {
      flex: 0 0 555px;
      text-align: center;

      .main-right-head {
        width: 526px;
        height: 55px;
        background: url(../img/rank/head-title.png) 0 0 no-repeat;
        background-size: 100% 100%;
        font-size: 30px;
        line-height: 55px;
        font-weight: 550;
        color: #fff;
        letter-spacing: 4px;
        margin: 0 auto;
      }

      .list {
        width: 514px;
        margin: 0 auto;
        padding-top: 8px;
        height: calc(100% - 55px);
        overflow: auto;

        .list-li {
          display: flex;
          height: 42px;
          justify-content: center;
          align-items: center;
          color: #fff;
          background-color: #304a49;

          .list-li-left,
          .list-li-name,
          .list-li-score {
            flex: 1;
            font-size: 18px;
          }

          .list-li-left {
            display: flex;
            justify-content: center;
            align-items: center;

            .list-medal {
              width: 21px;
              height: 30px;
              margin-right: 10px;
            }
          }
        }

        .list-li:nth-child(2n) {
          background-color: #163a34;
        }

        .list-medal.first {
          background: url(../img/rank/first.png) 0 0 no-repeat;
          background-size: 100% 100%;
        }

         .list-medal.second {
          background: url(../img/rank/second.png) 0 0 no-repeat;
          background-size: 100% 100%;
        }

         .list-medal.third {
          background: url(../img/rank/third.png) 0 0 no-repeat;
          background-size: 100% 100%;
        }
      }
    }


    // 最新交卷
    .main-left {
      flex: auto;
      display: flex;
      flex-direction: column;

      .head-main-title {
        height: 55px;
        background: url(../img/rank/head-main-title.png) 0 0 no-repeat;
        background-size: 100% 100%;
        margin-left: 20px;
        margin-right: 10px;
        text-align: center;
        line-height: 55px;
        font-size: 30px;
        line-height: 55px;
        font-weight: 550;
        color: #fff;
        letter-spacing: 4px;
      }

      // 方块
      .main-ul {
        flex: auto;
        width: 100%;
        display: flex;
        flex-wrap: wrap;
        overflow: auto;
        padding-top: 10px;

        .main-li {
          flex: 0 0 20%;
          padding: 0 0 8px 18px;
          height: 207px;

          .box {
            width: 250px;
            height: 100%;
            background: url(../img/rank/box.png) 0 0 no-repeat;
            background-size: 100% 100%;
            padding: 23px 0 16px 0;
            color: #fff;
            display: flex;
            flex-direction: column;

            .main-li-head {
              flex: 0 0 36px;
              display: flex;
              justify-content: flex-end;

              // 排名
              .ranking {
                flex: 0 0 135px;
                border-radius: 500px 0 0 500px;
                background-color: #ffc831;
                text-align: center;
                line-height: 36px;
                color: #29330d;
                font-size: 18px;
                font-weight: 500;
              }

              // 分数
              .main-score {
                flex: auto;
                font-size: 22px;
                text-align: center;

                .score-num {
                  font-size: 30px;
                  margin-right: 3px;
                }
              }
            }

            // 姓名
            .main-name {
              flex: 0 0 94px;
              text-align: center;
              line-height: 94px;
              font-size: 30px;
            }

            .main-time {
              height: 32px;
              margin: 0 22px;
              background-image: linear-gradient(to right, #27a48d, #2b8c7d, #30524f);
              text-align: center;
              line-height: 32px;
              border-radius: 500px;
              font-size: 18px;
            }
          }
        }
      }


    }
  }
}


// 系统提示
.system-hint {
  position: fixed;
  width: 430px;
  left: 50%;
  top: 50%;
  margin-left: -215px;
  margin-top: -172px;
  height: 345px;
  background: url(../img/rank/hint.png) 0 0 no-repeat;
  background-size: 100% 100%;
  z-index: 999;
  transform-origin: left;

  display: none;

  .main-li {
    .box {
      padding: 56px 0 20px 0;
      color: #fff;
      display: flex;
      flex-direction: column;

      .main-li-head {
        flex: 0 0 50px;
        display: flex;
        justify-content: flex-end;

        // 排名
        .ranking {
          flex: 0 0 185px;
          border-radius: 500px 0 0 500px;
          background-color: #ffc831;
          text-align: center;
          line-height: 50px;
          color: #29330d;
          font-size: 22px;
          font-weight: 500;
          padding-left: 20px;
        }

        // 分数
        .main-score {
          flex: auto;
          font-size: 26px;
          text-align: center;

          .score-num {
            font-size: 42px;
            margin-right: 3px;
          }
        }
      }

      // 姓名
      .main-name {
        flex: 0 0 130px;
        text-align: center;
        line-height: 130px;
        font-size: 41px;
      }

      .main-time {
        height: 50px;
        margin: 0 29px;
        background-image: linear-gradient(to right, #27a48d, #2b8c7d, #30524f);
        text-align: center;
        line-height: 50px;
        border-radius: 500px;
        font-size: 28px;
      }
    }
  }
}

.system-hint.active {
  display: block;
  animation: moveFirstBox 2s ease .5s;
  animation-fill-mode: forwards;
}

// 暂无进行的考试
.layui-layer.layui-layer-page {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  display: none;
}

@keyframes moveFirstBox {
  0% {
    transform: scale(1);
    opacity: 1;
  }

  95% {
    opacity: .9;
  }

  98% {
    opacity: .5;
  }

  99% {
    opacity: .1;
  }

  100% {
    top: 205px;
    left: 18px;
    margin-left: -9px;
    margin-top: -78px;
    transform: scale(.6);
    opacity: 0;
  }
}