//自动生成试卷按钮显示
function automaticTest() {
    var subjectVal = $("#sendSubject").val();
    if (subjectVal == "3" || subjectVal == "4" || subjectVal == "5") {
        $("#automaticTest").show();
        $("#btn_delete").hide();
        $('#testUl').show();
        $('#radioLi').text('单选题');
        $('#checkBoxLi').text('多选题');
        $('#blankLi').text('填空题');
        $('#judgeLi').text('判断题');
    } else if (subjectVal == "1") {
        $("#automaticTest").show();
        $("#btn_delete").hide();
        $('#testUl').show();
        $('#radioLi').text('本机信息题');
        $('#checkBoxLi').text('设置题');
        $('#blankLi').text('定位题');
        $('#judgeLi').text('短报文通信题');
    } else {
        $("#automaticTest").hide();
        $("#btn_delete").show();
    }
    $("#parTable").show();
    $("#autoTestBox").hide();
}
