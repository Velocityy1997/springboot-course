function getCategory() {
    $.ajax({
        type: "post",
        url: "/springboot-course/paper/getSubectInfo",
        dataType: "JSON",
        data: "subject=" + subject,
        success: function(res) {
            var data = res.data;
            $("#sendCategory").empty();
            $.each(data, function(i, item) {
                $('<option value="' + item.text + '">' + item.text + '</option>').appendTo($("#sendCategory"));
