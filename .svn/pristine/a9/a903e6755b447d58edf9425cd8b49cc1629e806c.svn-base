.modal-open {
  overflow: visible;
}

.user-view-box {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.user-view-box .user-head {
  flex: 0 0 50px;
  padding-bottom: 20px;
}

.user-view-box .user-head .user-head-ul {
  display: flex;
  width: 100%;
  height: 100%;
  padding-top: 40px;
}

.user-view-box .user-head .user-head-ul .user-head-li {
  flex: 1;
  padding: 0 10px;
  text-align: center;
}

.user-view-box .user-head .user-head-ul .user-head-li label {
  padding-right: 0;
  padding-left: 0;
  line-height: 34px;
}

.user-view-box .user-head .user-head-ul .user-head-li .col-sm-9 {
  padding-left: 5px;
  padding-right: 10px;
}

.user-view-box .user-head .user-head-ul .user-head-li .col-sm-9 .select {
  padding: 6px;
}

.user-view-box .user-head .user-head-ul .user-head-li:last-child {
  flex: .3;
}

.user-view-box .btns-box {
  display: flex;
  justify-content: flex-end;
  padding-bottom: 0;
}

.user-view-box .btns-box .btn {
  margin-right: 15px;
}

.user-view-box .user-body {
  flex: auto;
  padding: 10px;
}

.user-view-box .user-body .thead-light {
  background-image: linear-gradient(to bottom, #f8f8f8 0, #ececec 100%);
}

.user-view-box .user-body table tr {
  cursor: default;
}

.user-view-box .user-body .img-rounded {
  width: 50px;
  height: 50px;
}

.user-view-box .user-body .active td {
  background-color: #eee;
}

.modal-dialog {
  z-index: 9999;
}

.modal-dialog .form-box {
  display: flex;
  flex-direction: column;
}

.modal-dialog .form-box .form-group {
  margin-bottom: 5px;
}

.modal-dialog .form-box .layui-input-block {
  margin-left: 0;
}

.modal-dialog .form-box .form-group:last-child {
  margin-bottom: 0;
}

.modal-dialog .form-box .control-label {
  padding-right: 0;
  line-height: 34px;
}

.modal-dialog .form-box .col-sm-10 {
  padding-left: 0;
}

.modal-dialog .form-box .input-group {
  width: 100%;
}

.modal-dialog .form-box .form-contain {
  padding: 6px;
}

.modal-dialog .form-box .form-group:first-child .form-contain {
  padding-top: 3px;
}

.modal-dialog .layui-form-label {
  padding: 9px 8px 9px 0;
  width: 110px;
}

.modal-dialog .layui-form-item {
  margin-bottom: 5px;
}

.modal-dialog .layui-input-block input[type=file] {
  padding-top: 6px;
}

.modal-dialog .btns .layui-input-block {
  margin: 0 auto;
  margin-top: 20px;
  text-align: center;
}

.modal-dialog .btns .layui-input-block .layui-btn {
  width: 92px;
}

.must-fill {
  width: 20%;
  margin-left: 5px;
  display: inline-block;
  margin-right: 5px;
  color: #ff0000;
  font-size: 18px;
}
